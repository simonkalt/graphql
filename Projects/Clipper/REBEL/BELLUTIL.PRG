#include "sixcdx.ch"
#include "machsix.ch"

SET EXCLU OFF
USE RDINV
SELECT 0
USE BELLCO
INDEX ON PADL(TRIM(NCD),19,"0") TAG NCD TO BELLCO
SELECT RDINV
SET RELATION TO PADL(TRIM(BEITEMNO),19,"0") INTO BELLCO
GO TOP
DO WHILE !EOF()
  IF !EMPTY(BELLCO->BELLCONUM)
    X = RLOCK()
    REPLACE BEITEMNO WITH BELLCO->BELLCONUM
    UNLOCK
  ENDIF
  ? (RECNO()/RECCOUNT())*100
  SKIP
ENDDO
